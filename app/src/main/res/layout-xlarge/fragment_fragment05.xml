<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/chao"
    tools:context="com.example.administrator.fregment05.fregment.Fragment05">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/beijinglu"
        android:weightSum="1"
        android:layout_weight="15.9">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/lianxianglu"
                android:layout_width="20dp"
                android:layout_height="150dp"
                android:background="#ffffff"
                android:text="联想路"
                android:gravity="center"
                android:layout_marginLeft="130dp"/>
            <TextView
                android:id="@+id/yiyuanlu"
                android:layout_width="20dp"
                android:layout_height="145dp"
                android:background="#ffffff"
                android:text="医院路"
                android:gravity="center"
                android:layout_marginLeft="130dp"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/zhonglu"
                android:layout_width="130dp"
                android:layout_height="20dp"
                android:background="#ffffff"
                android:layout_marginTop="130dp"/>
            <TextView
                android:id="@+id/huanchenkuaisulu1"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@drawable/fg_lu"
                tools:text="环城快速路"
                android:gravity="center"/>
            <TextView
                android:id="@+id/huanchenkuaisulu2"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/fg_lu"
                tools:text="环城快速路"
                android:gravity="center"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/huanchenkuaisulu3"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@drawable/fg_lu"
                tools:text="环城快速路"
                android:gravity="center" />
            <TextView
                android:id="@+id/huanchengaosu"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="@drawable/fg_lu"
                tools:text="环城高速"
                android:gravity="center"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/xueyuanlu"
                android:layout_width="20dp"
                android:layout_height="135dp"
                android:background="#ffffff"
                android:text="学院路"
                android:gravity="center"
                android:layout_marginLeft="60dp"/>
            <TextView
                android:id="@+id/xinfulu"
                android:layout_width="20dp"
                android:layout_height="140dp"
                android:background="#ffffff"
                android:text="幸福路"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_alignLeft="@+id/xueyuanlu"
                android:layout_alignStart="@+id/xueyuanlu" />
            <TextView
                android:id="@+id/tinchechang"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:background="#ffffff"
                tools:text="停车场"
                android:gravity="center"
                android:layout_marginRight="65dp"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="match_parent"
        android:weightSum="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:background="@drawable/fg_biao"
            android:orientation="vertical">
            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="刷新"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="65dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textview_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="data"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:id="@+id/textview2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="week"
                        android:textSize="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
